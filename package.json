{
  "name": "flashcards-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "apps/lib"
  ],
  "scripts": {
    "dev": "echo 'Development mode'",
    "build": "echo 'Building all packages'",
    "test": "echo 'Running tests'",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:setup": "bash scripts/setup-test-db.sh",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') require('husky').install()\"",
    "lint:backend": "npm run lint --prefix apps/backend",
    "lint:frontend": "npm run lint --prefix apps/frontend",
    "build:backend": "npm run build --prefix apps/backend",
    "build:frontend": "npm run build --prefix apps/frontend",
    "test:backend": "npm run test --prefix apps/backend"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.57.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
